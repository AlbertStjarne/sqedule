<div class="sqedule-form-container">
  <h1 class= "text-center mt-6">Edit Assignments</h1>
  <%= form_with(model: [:staff, @assignment], scope: :assignment, local: true, class: "sqedule-form") do |form| %>
    <% if @assignment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

        <ul>
        <% @assignment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div> 
    <% end %>

    <div class="mx-auto">
      <%= form.label :off, class: "sqedule-label" %>
      <%= form.check_box :off, class: "sqedule-checkbox" %>
      <%= form.label :shift, class: "sqedule-label" %>
      <%= form.select :shift, @shifts.collect {|s| [s.pattern.shift_start.strftime("%H:%m")] } , {include_blank: 'Choose shift'}, class: "sqedule-dropdown" %>      
      <%= form.label :locked_shift_id, class: "sqedule-label" %>
      <%= form.check_box :locked_shift_id, class: "sqedule-checkbox" %>    

      <%= form.submit value: "Update", class: "btn btn-blue mt-4" %>   
    </div>
  <% end %>
</div>
  
