<div class="container mx-auto">
  <h1 class= "text-center mt-6">Edit Assignments</h1>
  <%= form_with(model: [:staffs, @assignments], scope: :assignment, local: true, class: "px-4 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mt-6") do |form| %>
    <% if @assignment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

        <ul>
        <% @assignment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div> 
    <% end %>

    <div class="mx-auto">
      <%= form.label :off, class: "block text-grey-darker text-sm font-bold mb-2" %>
      <%= form.check_box :off, class: "w-8 h-8 ml-2" %>
      <%= form.label :shift, class: "block text-grey-darker text-sm font-bold mb-2 mt-4" %>
      <%= form.text_field :shift, class: "w-8 h-8 ml-2", id: "cleaning-tag" %>
      <%= form.label :locked_shift_id, class: "block text-grey-darker text-sm font-bold mb-2 mt-4" %>
      <%= form.check_box :locked_shift_id, class: "w-8 h-8 ml-2" %>    
      <%= form.hidden_field :date, value: @date %>

      <%= form.submit value: "Update", class: "bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 my-4 rounded focus:outline-none focus:shadow-outline block" %>   
    </div>
  <% end %>
</div>
  
