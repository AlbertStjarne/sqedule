<div class="container mx-auto">
    <%= form_with(url: staff_assignments_path, scope: :assignment, local: true, class: "flex content-center justify-center") do |form| %>
    <% if @assignment.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this shift from being saved:</h2>

        <ul>
        <% @assignment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        </div> 
    <% end %>

        <%= form.label :off, class: "block text-grey-darker text-sm font-bold mb-2" %>
        <%= form.check_box :off, class: "shadow appearance-none border rounded py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline" %>
        <%= form.label :shift, class: "block text-grey-darker text-sm font-bold mb-2 mt-4" %>
        <%= form.text_field :shift, class: "w-8 h-8 ml-2", id: "cleaning-tag" %>
        <%= form.label :locked_shift_id, class: "block text-grey-darker text-sm font-bold mb-2 mt-4" %>
        <%= form.check_box :locked_shift_id, class: "shadow appearance-none border rounded py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline" %>    
        <%= form.hidden_field :date, value: @date %>

        <%= form.submit %>
    
    <% end %>
</div>