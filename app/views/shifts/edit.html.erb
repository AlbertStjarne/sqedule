<div class="container mx-auto">
  <h1 class= "text-center mt-6">Edit Article</h1>
  <%= form_with(model: [:pattern, @shift], scope: :shift, local: true, class: "px-4 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mt-6") do |form| %>
    <% if @shift.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

        <ul>
        <% @shift.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div> 
    <% end %>

    <div class="mx-auto">
      <%= form.label :staff_req, class: "block text-grey-darker text-sm font-bold mb-2" %>
      <%= form.number_field :staff_req, placeholder: "Title", class: "shadow appearance-none border rounded py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline" %>
      <%= form.label :cleaning, class: "block text-grey-darker text-sm font-bold mb-2 mt-4" %>
      <%= form.check_box :cleaning, class: "w-8 h-8 ml-2", id: "cleaning-tag" %>

      <%= form.submit value: "Update", class: "bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 my-4 rounded focus:outline-none focus:shadow-outline block" %>   
    </div>
  <% end %>
</div>
  
