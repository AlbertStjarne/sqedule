<div class="container mx-auto">
  <%= form_with(model: [ @staff ], local: true, class: 'pattern-grid') do |form| %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: "pattern-input"%>
    </div>
    <div class="field">
      <%= form.label :shift_preference %>
      <%= form.number_field :shift_preference, class: "pattern-input" %>
    </div>
    <div class="field">
      <%= form.label :employment_end %>
      <%= form.date_field :employment_end, class: "pattern-input" %>
    </div>
    <div class="field">
      <%= form.select :primary_role, ["Manager", "Receptionist", "Instructor"], {include_blank: 'Primary Role'}, class: "block appearance-none mt-4 bg-white border border-grey-light hover:border-grey px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline", id: "primary-role" %>
    </div>

    <div class="field">
      <p></p>
      <%= form.submit value: "Add", class: "btn btn-blue" %>
    </div>
  <% end %>
</div>